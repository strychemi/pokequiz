<%= form_tag session_path, class: "navbar-form navbar-right sign-in-form" do %>
  <div class="form-group" id="sign-in-form">
    <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
    <%= check_box_tag :remember_me %>
    <%= label_tag "remember me?" %>
    <%= submit_tag "Sign In", class: "btn btn-info" %>
    
  </div>
<% end %>
